.p-3
  .row
    .col-lg-12.p-3
      %h2.float-left 
        Affinity Platform
        .h5.subtitle Create an app by chaining components
      %div.float-right.ml-2
        - if user_signed_in?
          .btn-group
            = link_to 'Edit Profile', edit_user_registration_path, class: 'navbar-link btn btn-info'
            = link_to "Logout", destroy_user_session_path, method: :delete, data: { toggle: "tooltip", placement: "bottom" }, title: "Logged in as #{current_user.email}", class: 'navbar-link btn btn-info'
        - else
          .btn-group.float-right
            = link_to "Sign Up", new_user_registration_path, class: 'navbar-link btn btn-info'
            = link_to "Login", new_user_session_path, class: 'navbar-link btn btn-info'
      #import.float-right.btn.btn-dark
        %i.fa.fa-upload.mr-1
        Import Script
      #generate.mr-1.float-right.btn.btn-dark
        %i.fa.fa-print.mr-1
        Generate Script
  .row
    .col-lg-12.px-3
      .row.pt-2
        .col-lg-3
          = text_field_tag :search, nil, placeholder: 'Search for a Component...', class: "form-control", data: { list: @components.join(', ') }
          %hr
          #edge.btn.btn-outline-info
            %i.fa.fa-level-up
          #wedge.btn.btn-outline-info
            %i.fa.fa-long-arrow-right
          #delete.btn.btn-outline-danger.float-right
            %i.fa.fa-trash
          %hr.mb-0
          #components
          %hr.mt-0
        .col-lg-9
          #ring
  %hr
  .row
    .col-lg-12
      = text_area_tag 'script', "", rows: 10, class: "form-control"

#componentDetails.modal.fade
  .modal-dialog.modal-dialog-centered
    .modal-content
      .modal-header
        %h4.modal-title Component Options
