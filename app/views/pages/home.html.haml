          = number_field_tag :population_size, value = 10, min: 2, max: 100, class: "form-control"
          .input-group-prepend
            .input-group-text Momentum Factor
          = number_field_tag :momentum_factor, value = 2, min: 0, max: 6, class: "form-control"
          .input-group-prepend
            .input-group-text Cognitive Factor
          = number_field_tag :cognitive_factor, value = 2.6, min: 0, max: 4, class: "form-control"
          .input-group-prepend
            .input-group-text Social Factor
          = number_field_tag :social_factor, value = 1.2, min: 0, max: 4, class: "form-control"
        .btn-group
          .btn.btn-dark#start Smallest squares
          .btn.btn-dark#start Gradient descent
          .btn.btn-dark#start Genetic algorithm
