<div class="col-md-4 offset-md-4 col-sm-6 offset-sm-3 col-xs-12 pt-md-5 pt-sm-4 pt-xs-3">
  <h2 class="py-4">Resend unlock instructions</h2>

  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="actions form-group clearfix">
      <%= f.submit "Resend unlock instructions", class: "btn btn-dark float-right" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
